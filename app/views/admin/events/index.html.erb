<% super_title 'Public Meetings' %>

<%= page_entries_info @events %>
<%= will_paginate @events, renderer: BootstrapPagination::Rails %>
<table class='<%= table_css_class %>'>
  <thead>
    <tr>
      <th><%= sort_link(@search, :title, "Title") %></th>
      <th><%= sort_link(@search, :date, "Event Date") %></th>
      <th><%= sort_link(@search, :place_name, "Location") %></th>
      <th><%= sort_link(@search, :entry_publication_date, "Document") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.place.try(:name) %></td>
        <td><%= link_to event.entry.document_number, entry_path(event.entry) %> (<%= event.entry.publication_date %>)</td>
        <td>
          <%= link_to 'Edit', edit_admin_event_path(event) %>
          <%= link_to 'Delete', admin_event_path(event), :method => "DELETE", :confirm => "Are you sure you want to delete this?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @events, renderer: BootstrapPagination::Rails %>
