<% super_title 'Change My Password' %>

<%= semantic_form_for @user, :url => admin_password_reset_path, :method => :put do |f| %>
  <%= password_instructions %>

  <%= f.inputs do %>
    <%= f.input :password, :required => true, as: :password %>
    <%= f.input :password_confirmation, :required => true, as: :password %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :label => "Update my password and log me in", :button_html => {:class => "btn btn-large btn-success"} %>
  <% end %>
<% end %>
