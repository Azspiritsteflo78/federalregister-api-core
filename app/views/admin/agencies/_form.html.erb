<% f.inputs do %>
  <%= f.input :name,         :hint => "should be the sortable/inverted name, eg 'Agriculture Department'" %>
  <%# f.input :display_name, :hint => "should be what the agency calls itself; eg 'Department of Agriculture'" %>
  <%= f.input :short_name,   :hint => "should be the acronym or other very short name for this agency; eg 'USDA'" %>
  <%= f.input :pseudonym,    :hint => "'See Also' name for FR Index" %>
  <%= f.input :parent_id, :as => :select, :collection => Agency.alphabetically, :label => "Parent Agency" %>
  <%= f.input :description %>
  <%= f.input :url, :label => "URL" %>
  <%= f.input :logo %>
<% end %>

<% f.buttons do %>
  <%= f.commit_button 'Save' %>
<% end %>