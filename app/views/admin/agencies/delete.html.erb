<% title "Delete agency :: #{@agency.name}" %>

<% if @agency.entries.present? %>
  This agency has entries associated with it and cannot be deleted.
<% else %>
  Are you sure you want to delete <%= @agency.name %>? This cannot be undone!
  <% semantic_form_for @agency, :url => admin_agency_path(@agency), :html => {:method => :delete} do |f| %>
    <% f.buttons do %>
      <%= f.commit_button 'Delete Agency' %>
    <% end %>
  <% end %>
<% end %>
