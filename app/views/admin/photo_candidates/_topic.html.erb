<div id='<%= topic.split(' ').each{|t| t.downcase}.join('_') %>_flow' class="ContentFlow topic_photo_flow">
    <div class="loadIndicator"><div class="indicator"></div></div>
    <div class="flow">
        <% photos.each do |photo| %>
        <div class="item">
          <%= image_tag photo.url('m'), 'data-photo-large-url' => photo.url('b'), 'data-photo-id' => photo.id, :class => 'content' %>
          <div class="caption"><%= photo.creator.real_name.present? ? photo.creator.real_name : photo.creator.user_name %></div>
        </div>
        <% end %>
    </div>
    <div class="globalCaption"><%= topic %></div>
    <div class="scrollbar">
      <div class="slider">
        <div class="position"></div>
      </div>
    </div>
</div>
