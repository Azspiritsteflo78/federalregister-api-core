<% super_title "Change Password"  %>

<% semantic_form_for @user, :url => admin_user_password_path(@user) do |f| %>
  <%= password_instructions %>
  
  <% f.inputs do %>
    <%= f.input :current_password %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  
  <% f.buttons do %>
    <%= f.commit_button 'Save', :button_html => {:class => "btn btn-large btn-success"} %>
  <% end %>
<% end %>
