<%= f.inputs do %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <% unless f.object.new_record? %>
    <%= f.input :active %>
  <% end %>
<% end %>

<%= f.actions do %>
  <%= f.action :submit, :label => 'Save', :button_html => {:class => "btn btn-large btn-success"} %>
<% end %>
